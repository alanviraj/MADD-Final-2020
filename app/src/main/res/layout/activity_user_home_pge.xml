<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHomePge"
    tools:layout_editor_absoluteY="25dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_view_noti_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="52dp"
        android:clickable="false"
        app:backgroundTint="#143567"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_loyalty"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_view_userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#143567"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_AppointmentUser"
        app:layout_constraintEnd_toStartOf="@+id/btn_booknow"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#143567"
        android:longClickable="false"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logop"
        app:title="Vehicle Bath"
        app:titleMarginStart="40dp"
        app:titleTextColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_booknow"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="91dp"
        android:backgroundTint="#225EBB"
        android:fontFamily="@font/trykker"
        android:text="@string/UHomeB"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_view_noti_User"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/btn_view_AppointmentUser"
        android:layout_width="138dp"
        android:layout_height="68dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:background="#225EBB"
        android:fontFamily="@font/trykker"
        android:text="@string/UHomeA"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/btn_view_loyalty"
        app:layout_constraintTop_toBottomOf="@+id/btn_booknow" />

    <Button
        android:id="@+id/btn_view_loyalty"
        android:layout_width="150dp"
        android:layout_height="68dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="45dp"
        android:background="#225EBB"
        android:fontFamily="@font/trykker"
        android:text="@string/UHomeL"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_booknow"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="391dp"
        android:layout_height="300dp"
        android:layout_marginTop="45dp"
        android:background="#D5D2D2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_AppointmentUser">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#757171"
            android:text="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="370dp"
            android:layout_height="86dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="203dp"
            android:background="#FF757171"
            android:text="2"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="104dp"
            android:background="#FF757171"
            android:text="3"
            android:textAlignment="center"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logout1"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="553dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>