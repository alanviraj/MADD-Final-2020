<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".OrgnizationReport_or_Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/user_name_OR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            />


        <TextView
            android:id="@+id/user_phone_OR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_OR"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="35dp"
            android:text="User Phone"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/user_email_OR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_phone_OR"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="35dp"
            android:text="User Email"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            />


        <TextView
            android:id="@+id/user_password_OR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_email_OR"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="35dp"
            android:text="User Password"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            />


        <Button
            android:id="@+id/btnReportSubmit_OR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:layout_marginTop="6dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/user_password_OR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_report"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>