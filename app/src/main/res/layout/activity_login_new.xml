<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginNew"
    android:background="@drawable/aaa"
    >
<!--    android:background="@drawable/aaa"-->

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/shapex"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/trykker"
        android:shadowColor="#0B0909"
        android:shadowRadius="10"
        android:text="@string/loginH"
        android:textColor="#255ebb"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remember_me_chk" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="142dp"
        android:fontFamily="@font/trykker"
        android:text="@string/loginH"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/enter_log_pwd"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/shapeq"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textColor="#225EBB"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFC0C7D3"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_log_num" />
    <TextView
        android:id="@+id/for_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:text="Forgot Password?"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_log_pwd" />
    <CheckBox
        android:id="@+id/remember_me_chk"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:text="Remember me"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cbd_strokeColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_log_pwd" />
    <EditText
        android:id="@+id/enter_log_num"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/shapeq"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint=" Username"
        android:inputType="number"
        android:textColor="#225EBB"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#C0C7D3"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
    <TextView
        android:id="@+id/am_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="44dp"
        android:text="I'm an Admin"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/not_admin"
        app:layout_constraintTop_toBottomOf="@+id/btnlogin" />
    <TextView
        android:id="@+id/not_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="148dp"
        android:text="I'm not an Admin"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>